@model UniLibrary.Factories.Room
@using UniLibrary.Models

@{
    ViewData["Title"] = "Book";
}

<div class="p-3">
    <div class="d-flex justify-content-between pt-4">
        <div class="">
            <h2 class="text-primary">Rooms</h2>
        </div>
        <div class="row">
            <ul class="list-group list-group-horizontal-sm col-12">
                <a class="btn btn-primary mt-2 mt-sm-0 ml-sm-3 py-2 px-3"
                    style="text-decoration:none; vertical-align: middle;" asp-controller="Rooms" asp-action="Create">
                    <i class="align-middle  bi bi-plus-circle"></i> <span class="align-middle">&nbsp; New</span>
                </a>
            </ul>
        </div>
    </div>
</div>
<div class="p-3">
    <table id="Rooms" class="table table-striped table-hover display" cellspacing="0" width="100%">
        <thead>
            <tr class="bg-light">
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Capacity)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Floor)
                </th>
                <th></th>
            </tr>
        </thead>
    </table>
</div>

@section scripts
{
<script src="~/js/Rooms.js"></script>
}