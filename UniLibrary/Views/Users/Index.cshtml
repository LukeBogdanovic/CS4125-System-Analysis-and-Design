@model IEnumerable<UniLibrary.Models.User>

@{
    ViewData["Title"] = "Index";
}

<div class="p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Users</h2>
        </div>

        <div class="col-6 text-right">
            <a class="btn btn-primary" asp-controller="User" asp-action="Create">
                <i class="bi bi-plus-circle"></i> &nbsp; New
            </a>
        </div>
    </div>
    <br />
    <table id="members" class="table table-hover">
        <thead>
            <tr class="bg-light">
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.StudentID)
                </th>
                <th>
                    @Html.DisplayName("Loans")
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>
                        @Html.ActionLink(user.Name, "Details", "User", new { id = user.ID }, null)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => user.StudentID)
                    </td>
                    @if (user.Loans!.Count() != 0)
                    {
                        <td style='color: #198754;'>
                            <p class="font-weight-bold">@Html.DisplayName("âœ“")</p>
                        </td>
                    }
                    else
                    {
                        <td>
                            <p class="font-weight-bold">@Html.DisplayName("-")</p>
                        </td>
                    }
                    <td colspan="2" class="text-right">
                        <a class="btn-link mx-2 js-delete" data-user-id=@user.ID><i class='bi bi-trash-fill'
                            style='color: #ff4136; cursor:pointer;'></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts{
<script src="~/js/users.js"></script>
}